@{
    ViewBag.Title = "Index";
}
<script src="~/Scripts/app/studentsCtrl.js"></script>

<style>
    .btn-space {
        margin-left: -5%;
        background-color: cornflowerblue;
        font-size: large;
    }
</style>

<div ng-app="myApp">
    <div ng-controller="studentsCtrl" ng-init="GetAll()" class="divList">

    <h3 class="mt-3">
        <span id="spn">Students Subjects</span>
    </h3>

    <table cellpadding="12" class="table table-sm table-striped table-hover">
        <thead>
            <tr class="d-flex">
                <td class="col-6"><b> Student </b></td>
                <td class="col-6"><b> Subjects</b></td>
            </tr>
        </thead>
        <tr class="d-flex" ng-repeat="student in students">
            <td class="col-6">
                {{student.Name}}
            </td>

            <td class="col-6">
                <span ng-repeat="subject in student.Subjects">
                    {{subject.Name}}
                </span>
            </td>
        </tr>

    </table>

    @Html.Hidden("StudentID")

</div>


